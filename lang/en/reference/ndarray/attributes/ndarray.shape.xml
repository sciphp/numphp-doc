<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="ndarray.shape">

<refnamediv>
  <refname>NdArray::shape</refname>
  <refpurpose>Tuple of array dimensions.</refpurpose>
</refnamediv>

<!-- description -->
<refsect1 role="description">
  &reftitle.description;
  <attributesynopsis>
    &array.type;<attributename>NdArray::shape</attributename>
  </attributesynopsis>
</refsect1>

<!-- return -->
<refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
  A 1-dim &array.type;
  </para>
</refsect1>

<!-- examples -->
<refsect1 role="examples">
  &reftitle.examples;
  <para>
    <example>
      <title>Get the NdArray shape</title>
      <programlisting role="php">
<![CDATA[
<?php

use SciPhp\NumPhp as np;

$m = np::linspace(1, 9, 9)->reshape(3, 3);

$shape = np::ar($m->shape);

echo "m\n$m", "shape=$shape\n";

?>
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
m
[[1  2  3]
 [4  5  6]
 [7  8  9]]
shape=[3  3]
]]>
      </screen>
    </example>

    <example>
      <title>Reshape an NdArray</title>
      <programlisting role="php">
<![CDATA[
use SciPhp\NumPhp as np;

$m = np::ar([1, 2, 3, 4]);

$m->shape = [2, 2];

echo "m\n$m";
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
m
[[1  2]
 [3  4]]
]]>
      </screen>
    </example>
  </para>
</refsect1>

