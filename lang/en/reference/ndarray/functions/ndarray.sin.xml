<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="ndarray.sin">

<refnamediv>
  <refname>NdArray::sin</refname>
  <refpurpose>Trigonometric sine, element-wise.
  </refpurpose>
</refnamediv>

<!-- description -->
<refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
    &sciphp.ndarray.type;<methodname>NdArray::sin</methodname>
  </methodsynopsis>
</refsect1>

<!-- parameters -->
<refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
</refsect1>

<!-- return -->
<refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
  The new &sciphp.ndarray.type; The sine of each element of m.
  </para>
</refsect1>

<!-- examples -->
<refsect1 role="examples">
  &reftitle.examples;
  <para>
    <example>
      <title>Sine of matrix values</title>
      <programlisting role="php">
<![CDATA[
<?php
use SciPhp\NumPhp as np;

$x = np::ar([
    [0   , M_PI_2, M_PI], 
    [M_PI, M_PI_2, 0   ]
]);

$y = $x->sin();

echo "x=\n$x\n", "y=\n$y\n";
?>
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
x=
[[0                1.5707963267949  3.1415926535898]
 [3.1415926535898  1.5707963267949  0              ]]

y=
[[0                    1                    1.2246467991474E-16]
 [1.2246467991474E-16  1                    0                  ]]
]]>
      </screen>
    </example>
  </para>
</refsect1>

