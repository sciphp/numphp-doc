<?xml version="1.0" encoding="utf-8"?>
<refentry xml:id="ndarray.signbit">

<refnamediv>
  <refname>NdArray::signbit</refname>
  <refpurpose>Returns element-wise true where signbit is set (less than zero).</refpurpose>
</refnamediv>

<!-- description -->
<refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
    &sciphp.ndarray.type;<methodname>NdArray::signbit</methodname>
  </methodsynopsis>
</refsect1>

<!-- parameters -->
<refsect1 role="parameters">
  &reftitle.parameters;
  <para>
    &no.function.parameters;
  </para>
</refsect1>

<!-- return -->
<refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
  A &sciphp.ndarray.type;
  </para>
</refsect1>

<!-- examples -->
<refsect1 role="examples">
  &reftitle.examples;
  <para>
    <example>
      <title>Construct a signbit array</title>
      <programlisting role="php">
<![CDATA[
use SciPhp\NumPhp as np;

$m = np::ar([-1, 0, 1])->signbit();

echo "m\n$m";
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
m
[true  false  false]
]]>
      </screen>
    </example>
  </para>
</refsect1>

<!-- see also -->
<refsect1 role="seealso">
  &reftitle.seealso;
  <para>
    <simplelist>
      <member><function>NdArray::copysign</function></member>
    </simplelist>
  </para>
</refsect1>
</refentry>
