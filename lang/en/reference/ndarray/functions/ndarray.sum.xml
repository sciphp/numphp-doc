<!-- examples -->
<refsect1 role="examples">
  &reftitle.examples;
  <para>
    <example>
      <title>Sum a square matrix</title>
      <programlisting role="php">
<![CDATA[
<?php

use SciPhp\NumPhp as np;

$m = np::linspace(1, 9, 9)->reshape(3, 3);

$s = $m->sum();

echo "m\n$m", "s=sum(m)\n$s";
?>
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
m
[[1  2  3]
 [4  5  6]
 [7  8  9]]
s=sum(m)
45
]]>
      </screen>
    </example>
   </para>
